
<% show_comments ||= false%>

<%=  link_to user_post_path(user_id:post.user.id,id:post.id) do%>


<div class="flex-col p-4 m-2 space-y-2 border-2 border-blue-200 bg-cyan-300">

<p class="text-3xl font-semibold ">
Post #<%= post.id%>  by <%= post.user.name%>

</p>

<p class="text-xl font-medium ">

<%= post.text%>
</p>

<div class="flex justify-end pr-12 space-x-4 font-semibold">
	<p>Comments: <%= post.comments_count || 0 %></p>
	
	<p>Likes: <%= post.likes_count ||0 %></p>
</div>
<%end%>

	<div class="flex">
		<%= link_to new_user_post_comment_path(user_id:post.user_id,post_id:post.id) do %>
			<button class="p-4 m-4 text-center bg-yellow-300 ring-8 w-52 hover:cursor-pointer">Create New Comment</button>
		<%end%>
	
		<%= button_to 'Like' , user_post_likes_path(user_id: post.user.id, post_id: post.id), class:"w-32 p-4 m-4 text-center bg-orange-500 hover:cursor-pointer ring-8" %>
	

	</div>


<%# show comments if specifically asked for by render  %>
<% if show_comments%>
<%= render  partial:'/comments/comment' , collection:post.most_recent_comments  %>
<%end%>

</div>

